<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.PuppyAdoption.Dark" parent="android:Theme.DeviceDefault.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bg</item>
        <item name="android:colorPrimaryDark">@color/bg</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/bg</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.PuppyAdoption.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="Theme.PuppyAdoption.AppBarOverlay" parent="android:Theme.DeviceDefault.Light.DarkActionBar" />

    <style name="Theme.PuppyAdoption" parent="android:Theme.Material.Light.NoActionBar" />
